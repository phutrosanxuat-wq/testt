    <script type="module">
        // Import Firebase modules
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, setDoc, setLogLevel, runTransaction, collection, getDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        
        // C·∫•u h√¨nh chung
        const REEL_COUNT = 3;
        const NUMBER_RANGE = 10; 
        const BASE_SPIN_DURATION = 3000; 
        const CLAIMED_COLLECTION_PATH = 'claimed_numbers_mid_autumn'; 
        
        // =========================================================================
        // ***** C·∫§U H√åNH GOOGLE SHEET LOGGING (TH√îNG QUA GOOGLE FORM) *****
        // =========================================================================
        // THAY TH·∫æ C√ÅC BI·∫æN D∆Ø·ªöI ƒê√ÇY KHI CH·∫†Y TR√äN SERVER RI√äNG C·ª¶A B·∫†N.
        const GOOGLE_FORM_URL = 'YOUR_GOOGLE_FORM_POST_URL'; 
        const FORM_ENTRY_RESULT = 'ENTRY_ID_FOR_RESULT';       
        const FORM_ENTRY_USER_ID = 'ENTRY_ID_FOR_USER_ID';     

        // =========================================================================
        // ***** C·∫§U H√åNH FIREBASE KHI CH·∫†Y ƒê·ªòC L·∫¨P (B·∫ÆT BU·ªòC PH·∫¢I C√ì) *****
        // =========================================================================
        // !!! B·∫†N PH·∫¢I THAY TH·∫æ TO√ÄN B·ªò C√ÅC GI√Å TR·ªä GI·∫¢ L·∫¨P B√äN D∆Ø·ªöI B·∫∞NG C·∫§U H√åNH
        // !!! TH·∫¨T C·ª¶A D·ª∞ √ÅN FIREBASE C·ª¶A B·∫†N (sau khi t·∫°o Web App).
        const FALLBACK_FIREBASE_CONFIG = {
            apiKey: "AIzaSyB_REPLACE_WITH_YOUR_API_KEY", 
            authDomain: "replace-with-your-project-id.firebaseapp.com",
            projectId: "replace-with-your-project-id", // R·∫§T QUAN TR·ªåNG
            storageBucket: "replace-with-your-project-id.appspot.com",
            messagingSenderId: "REPLACE_WITH_YOUR_MESSAGING_SENDER_ID",
            appId: "1:REPLACE_WITH_YOUR_APP_ID:web:hashvalue"
        };

        // Ki·ªÉm tra n·∫øu bi·∫øn m√¥i tr∆∞·ªùng Canvas kh√¥ng t·ªìn t·∫°i, s·ª≠ d·ª•ng gi√° tr·ªã gi·∫£ l·∫≠p.
        const firebaseConfigRaw = typeof __firebase_config !== 'undefined' ? __firebase_config : null;
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
        
        // Bi·∫øn to√†n c·ª•c
        const reelElements = [];
        const finalResults = [];
        const spinButton = document.getElementById('spinButton');
        const popup = document.getElementById('popup');
        const popupMessage = document.getElementById('popupMessage');
        const popupTitle = document.getElementById('popupTitle');
        const sequenceDisplay = document.getElementById('sequenceDisplay'); 

        let CELL_HEIGHT_PX = 120; 
        let db, auth, userId, appId;


        // -------------------- PH·∫¶N FIREBASE & C·∫§U H√åNH CHUNG --------------------
        
        async function setupFirebase() {
            setLogLevel('Debug');
            
            let firebaseConfig;
            let isStandalone = false;
            
            if (firebaseConfigRaw) {
                // S·ª¨ D·ª§NG C·∫§U H√åNH T·ª™ M√îI TR∆Ø·ªúNG CANVAS (∆Øu ti√™n)
                firebaseConfig = JSON.parse(firebaseConfigRaw);
                appId = typeof __app_id !== 'undefined' ? __app_id : 'default-canvas-app-id';
            } else {
                // S·ª¨ D·ª§NG C·∫§U H√åNH D·ª∞ PH√íNG (Standalone Mode - GitHub Pages)
                isStandalone = true;
                firebaseConfig = FALLBACK_FIREBASE_CONFIG;
                
                // S·ª≠ d·ª•ng projectId l√†m AppId khi ch·∫°y ƒë·ªôc l·∫≠p ƒë·ªÉ t·∫°o path Firestore
                appId = firebaseConfig.projectId || 'FALLBACK-GAME-ID-STANDALONE'; 
                
                console.warn("Firebase running in STANDALONE mode. Ensure you updated FALLBACK_FIREBASE_CONFIG.");
            }

            if (Object.keys(firebaseConfig).length === 0 || !firebaseConfig.projectId || firebaseConfig.projectId.includes('replace-with')) {
                console.error("Firebase config is invalid or needs to be replaced.");
                sequenceDisplay.textContent = "L·ªói: C·∫ßn thay c·∫•u h√¨nh Firebase!";
                spinButton.disabled = true;
                return;
            }

            const app = initializeApp(firebaseConfig);
            db = getFirestore(app);
            auth = getAuth(app);
            
            try {
                // X√°c th·ª±c ng∆∞·ªùi d√πng
                if (initialAuthToken && !isStandalone) {
                    await signInWithCustomToken(auth, initialAuthToken);
                } else {
                    // C·∫ßn thi·∫øt ƒë·ªÉ ghi d·ªØ li·ªáu c√¥ng khai tr√™n Firestore
                    await signInAnonymously(auth);
                }
                
                // L∆∞u userId (ID ·∫©n danh c·ªßa ng∆∞·ªùi ch∆°i)
                userId = auth.currentUser?.uid || crypto.randomUUID(); 
                
                // Hi·ªÉn th·ªã Project ID/App ID ƒë·ªÉ ng∆∞·ªùi d√πng bi·∫øt d·ªØ li·ªáu l∆∞u ·ªü ƒë√¢u
                sequenceDisplay.textContent = appId; 
                console.log("Firebase Ready. App/Project ID:", appId, "User ID:", userId);
            } catch (error) {
                console.error("Firebase Authentication failed:", error);
                sequenceDisplay.textContent = "L·ªói x√°c th·ª±c!";
                spinButton.disabled = true;
            }
        }
        
        // -------------------- PH·∫¶N LOGIC GHI D·ªÆ LI·ªÜU L√äN GOOGLE SHEET --------------------

        function logToGoogleSheet(resultString, uId) {
            if (GOOGLE_FORM_URL.includes('YOUR_GOOGLE_FORM_POST_URL')) {
                console.warn("Google Sheet Logging SKIPPED: Vui l√≤ng c·∫•u h√¨nh GOOGLE_FORM_URL v√† Entry IDs.");
                return;
            }
            
            const formData = new FormData();
            formData.append(FORM_ENTRY_RESULT, resultString);
            formData.append(FORM_ENTRY_USER_ID, uId);

            fetch(GOOGLE_FORM_URL, {
                method: 'POST',
                body: formData,
                mode: 'no-cors', 
            })
            .then(() => console.log('Successfully logged to Google Sheet (via Google Form).'))
            .catch(error => console.error('Error logging to Google Sheet:', error));
        }

        // -------------------- PH·∫¶N LOGIC QUAY S·ªê DUY NH·∫§T --------------------
        // Path Firestore: /artifacts/{appId}/public/data/claimed_numbers_mid_autumn/{s·ªë_quay_ƒë∆∞·ª£c}
        // Vi·ªác s·ª≠ d·ª•ng Transaction ƒë·∫£m b·∫£o s·ªë ƒë∆∞·ª£c quay ra l√† DUY NH·∫§T.
        
        async function generateUniqueResultAndClaim() {
            if (!db) throw new Error("Database not initialized or config is missing.");

            // Tham chi·∫øu ƒë·∫øn collection c√¥ng khai l∆∞u tr·ªØ c√°c s·ªë ƒë√£ ƒë∆∞·ª£c quay
            const claimedRef = collection(db, `artifacts/${appId}/public/data/${CLAIMED_COLLECTION_PATH}`);
            let attemptCount = 0;
            const MAX_ATTEMPTS = 50; 

            while (attemptCount < MAX_ATTEMPTS) {
                attemptCount++;

                // 1. T·∫°o 3 ch·ªØ s·ªë ng·∫´u nhi√™n (0-9)
                const d1 = Math.floor(Math.random() * 10);
                const d2 = Math.random() < 0.5 ? Math.floor(Math.random() * 10) : Math.floor(Math.random() * 10);
                const d3 = Math.random() < 0.5 ? Math.floor(Math.random() * 10) : Math.floor(Math.random() * 10);
                
                const newResult = [d1, d2, d3];
                const resultString = newResult.join(''); // V√≠ d·ª•: "123"

                try {
                    // 2. S·ª≠ d·ª•ng Transaction ƒë·ªÉ ki·ªÉm tra v√† ghi nh·∫≠n s·ªë (Claim)
                    const claimedResult = await runTransaction(db, async (transaction) => {
                        const docRef = doc(claimedRef, resultString);
                        const docSnap = await transaction.get(docRef);

                        if (docSnap.exists()) {
                            // N·∫øu s·ªë ƒë√£ c√≥, Transaction s·∫Ω t·ª± ƒë·ªông Rollback
                            throw new Error("ALREADY_CLAIMED"); 
                        } else {
                            // Ghi nh·∫≠n s·ªë duy nh·∫•t v√†o Firestore
                            transaction.set(docRef, {
                                result: resultString,
                                claimedByUserId: userId, 
                                timestamp: new Date().toISOString(),
                            });
                            
                            return newResult; // Tr·∫£ v·ªÅ s·ªë ƒë√£ Claim th√†nh c√¥ng
                        }
                    });
                    
                    return claimedResult; 

                } catch (e) {
                    if (e.message === "ALREADY_CLAIMED") {
                        continue; // Ti·∫øp t·ª•c th·ª≠ quay s·ªë kh√°c
                    } else {
                        console.error("Firebase Transaction Error:", e);
                        throw new Error("L·ªói h·ªá th·ªëng khi quay s·ªë (TXN). Vui l√≤ng th·ª≠ l·∫°i.");
                    }
                }
            }

            throw new Error("ƒê√£ h·∫øt s·ªë may m·∫Øn ho·∫∑c qu√° nhi·ªÅu ng∆∞·ªùi ch∆°i c√πng l√∫c. Vui l√≤ng th·ª≠ l·∫°i sau.");
        }
        
        // Kh·ªüi t·∫°o c√°c cu·ªôn s·ªë (CH·ªà CH·ª®A S·ªê 0-9)
        function initializeReels() {
            const rootStyle = getComputedStyle(document.documentElement);
            CELL_HEIGHT_PX = parseInt(rootStyle.getPropertyValue('--cell-height').replace('px', ''));
            
            reelElements.length = 0;

            for (let i = 1; i <= REEL_COUNT; i++) {
                const reel = document.getElementById(`reel${i}`);
                reelElements.push(reel);
                
                let reelContent = '';
                
                // L·∫∑p 3 l·∫ßn d·∫£i s·ªë 0-9 ƒë·ªÉ ƒë·∫£m b·∫£o cu·ªôn c√≥ ƒë·ªô d√†i ƒë·ªß cho animation
                for (let k = 0; k < 3; k++) { 
                    for (let j = 0; j < NUMBER_RANGE; j++) { 
                        reelContent += `<div class="reel-cell">${j}</div>`;
                    }
                }

                reel.innerHTML = reelContent;
            }
        }
        
        /**
         * Ho·∫°t ƒë·ªông quay s·ªë cho t·ª´ng cu·ªôn (reel)
         */
        function spinReel(index, targetDigit) {
            const reel = reelElements[index];
            
            return new Promise(resolve => {
                
                // V·ªã tr√≠ d·ª´ng: 2 l·∫ßn l·∫∑p ƒë·∫ßy ƒë·ªß + targetDigit
                const stopIndex = (2 * NUMBER_RANGE) + targetDigit; 
                const stopPosition = -(stopIndex * CELL_HEIGHT_PX); 
                
                // Delay v√† Duration tƒÉng d·∫ßn theo c·ªôt (index)
                const sequentialDelay = index * 500; 
                const duration = BASE_SPIN_DURATION + sequentialDelay; 
                
                reel.style.transition = 'none'; 
                reel.style.transform = 'translateY(0px)';
                
                reel.classList.add('spinning-blur');
                
                setTimeout(() => {
                    reel.style.transition = `transform ${duration / 1000}s cubic-bezier(0.1, 0.7, 0.1, 1)`;
                    reel.style.transform = `translateY(${stopPosition}px)`;
                    
                    const transitionEndListener = () => {
                        reel.removeEventListener('transitionend', transitionEndListener);
                        reel.classList.remove('spinning-blur');
                        resolve(targetDigit);
                    };
                    
                    reel.addEventListener('transitionend', transitionEndListener);
                }, 10 + sequentialDelay); 
            });
        }
        
        // B·∫Øt ƒë·∫ßu quay
        async function startSpin() {
            spinButton.disabled = true;
            spinButton.classList.add('spinning');
            
            finalResults.length = 0;
            
            const rootStyle = getComputedStyle(document.documentElement);
            CELL_HEIGHT_PX = parseInt(rootStyle.getPropertyValue('--cell-height').replace('px', ''));

            let randomDigits;
            try {
                // B∆∞·ªõc 1: T·∫°o v√† Claim s·ªë duy nh·∫•t t·ª´ Firestore
                randomDigits = await generateUniqueResultAndClaim(); 
            } catch (error) {
                // X·ª≠ l√Ω l·ªói khi kh√¥ng t·∫°o ƒë∆∞·ª£c s·ªë (v√≠ d·ª•: h·∫øt s·ªë ho·∫∑c l·ªói h·ªá th·ªëng)
                spinButton.classList.remove('spinning');
                spinButton.disabled = false;
                showPopup(error.message, "error");
                return; 
            }

            // B∆∞·ªõc 2: B·∫Øt ƒë·∫ßu animation v·ªõi s·ªë v·ª´a ƒë∆∞·ª£c Claim
            const spinPromises = reelElements.map((_, index) => 
                spinReel(index, randomDigits[index])
            );
            
            await Promise.all(spinPromises);
            
            spinButton.classList.remove('spinning');
            
            const finalString = randomDigits.join(' - ');
            
            // G·ªåI H√ÄM LOGGING SAU KHI QUAY TH√ÄNH C√îNG V√Ä ƒê√É CLAIM
            logToGoogleSheet(randomDigits.join(''), userId); 

            showPopup(finalString, "success");
            
            spinButton.disabled = false;
        }

        // Hi·ªÉn th·ªã Pop-up
        function showPopup(message, type) {
            if (type === "error") {
                popupTitle.textContent = "‚ùå L·ªñI R·ªíI! ‚ùå";
                popupTitle.style.color = '#ff4444';
                popupMessage.innerHTML = `<p style="color: #ffcccc; font-weight: 700;">${message}</p>`;
            } else {
                popupTitle.textContent = "‚ú® CH√öC M·ª™NG! ‚ú®";
                popupTitle.style.color = 'var(--main-gold)';
                const resultHtml = `B·∫°n ƒë√£ quay ƒë∆∞·ª£c b·ªô s·ªë may m·∫Øn: <br><span style="font-size: 1.8em; color: var(--main-gold); text-shadow: 0 0 10px var(--glow-gold);">${message}</span>`;
                const noteHtml = `<p style="margin-top: 15px; font-weight: 700; color: #eee;">üì∏ H√£y ch·ª•p ·∫£nh m√†n h√¨nh l·∫°i v√† cmt s·ªë m√† b·∫°n ƒë√£ quay ƒë∆∞·ª£c cho t·ª•i m√¨nh nh√©! üìù</p>`;
                popupMessage.innerHTML = resultHtml + noteHtml;
            }
            
            popup.style.display = 'flex';
            
            setTimeout(() => {
                popup.classList.add('show');
            }, 10);
        }

        // ƒê√≥ng Pop-up
        window.closePopup = function() {
            popup.classList.remove('show');
            setTimeout(() => {
                popup.style.display = 'none';
            }, 400); 
        }

        // X·ª≠ l√Ω khi c·ª≠a s·ªï thay ƒë·ªïi k√≠ch th∆∞·ªõc
        window.onresize = initializeReels;
        
        // Kh·ªüi t·∫°o Firebase v√† game khi trang t·∫£i xong
        window.onload = async function() {
            await setupFirebase();
            initializeReels();
        };

        // G√°n h√†m startSpin v√†o window ƒë·ªÉ HTML c√≥ th·ªÉ g·ªçi
        window.startSpin = startSpin;
    </script>
</body>
</html>
